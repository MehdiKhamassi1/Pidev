{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Commentaire'|capitalize }}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ 'Details de Commentaire'|capitalize }}</h1>
<br><br><br><br>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ commentaire.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Contenu</th>
                    <td>{{ commentaire.contenu }}</td>
                </tr>
            </tbody>
        </table>

        <div class="btn-group mt-3">
            <a href="{{ path('app_commentaire_index') }}" class="btn btn-secondary">
                {{ 'Retour à la liste'|trans }}
            </a>
            <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-primary">
                {{ 'Éditer'|trans }}
            </a>
        </div>

        {{ include('commentaire/_delete_form.html.twig') }}
    </div>
{% endblock %}
