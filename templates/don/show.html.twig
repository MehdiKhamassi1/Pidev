{% extends 'baseback.html.twig' %}

{% block title %}Donations{% endblock %}

{% block content %}


<div class="container">
    <h1>Donation Details</h1>

    <table>
        <tbody>
            
            <tr>
                <th>Donator Name</th>
                <td>{{ don.nom }}</td>
            </tr>
            <tr>
                <th>Donator Lastname</th>
                <td>{{ don.prenom }}</td>
            </tr>
            <tr>
                <th>Donator Email</th>
                <td>{{ don.email }}</td>
            </tr>
            <tr>
                <th>Donation Type</th>
                <td>{{ don.type }}</td>
            </tr>
        </tbody>
    </table>
<center>
    <a href="{{ path('app_don_index') }}" class="btn btn-primary">Back to List</a>
    <a href="{{ path('app_don_edit', {'id': don.id}) }}" class="btn btn-primary">Edit</a>
<br> <br>
    {{ include('don/_delete_form.html.twig') }}
    </center>
</div>
{% endblock %}
