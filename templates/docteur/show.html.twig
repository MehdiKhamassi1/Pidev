{% extends 'base.html.twig' %}

{% block title %}docteur  index{% endblock %}
 {% block body %}
 {% endblock %}
{% block content %}
    <h1>Docteur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ docteur.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ docteur.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ docteur.roles ? docteur.roles|json_encode : '' }}</td>
            </tr>
            
            <tr>
                <th>Nom</th>
                <td>{{ docteur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ docteur.prenom }}</td>
            </tr>
            <tr>
                <th>Numtel</th>
                <td>{{ docteur.numtel }}</td>
            </tr>
            <tr>
                <th>Birth</th>
                <td>{{ docteur.birth ? docteur.birth|date('Y-m-d ') : '' }}</td>
            </tr>
            <tr>
                <th>Profile_image</th>
                <td> <img src="{{ asset('uploads/' ~ docteur.profileImage) }}" alt="docteur Image" class="img-fluid mb-3" height="100px" width="100px"> </td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ docteur.gender }}</td>
            </tr>
            <tr>
                <th>Specialite</th>
                <td>{{ docteur.specialite }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_docteur_edit', {'id': docteur.id}) }}">edit</a>

    {{ include('docteur/_delete_form.html.twig') }}
{% endblock %}
