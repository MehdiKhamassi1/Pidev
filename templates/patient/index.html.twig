{% extends 'baseback.html.twig' %}

{% block title %}Patient  index{% endblock %}
 {% block body %}
 {% endblock %}
{% block content %}
    <h1>Patient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Date_naissance</th>
                <th>Email</th>
                <th>Mdp</th>
                <th>Numtel</th>
                <th>Age</th>
                <th>Gender</th>
                <th>image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.nom }}</td>
                <td>{{ patient.prenom }}</td>
                <td>{{ patient.date_de_nassance }}</td>
                <td>{{ patient.email }}</td>
                <td>{{ patient.mdp }}</td>
                <td>{{ patient.numtel }}</td>
                <td>{{ patient.age }}</td>
                <td>{{ patient.gender }}</td>
                <td> <img src="{{ asset('uploads/patient/' ~ patient.profileImage) }}" alt="patient Image" class="img-fluid mb-3" height="100px" width="100px"> </td>

                <td>
                    <a href="{{ path('app_patient_show', {'email': patient.email}) }}">show</a>
                    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_patient_new') }}">Create new</a>
{% endblock %}
