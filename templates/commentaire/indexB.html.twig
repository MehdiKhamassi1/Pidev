{% extends 'baseback.html.twig' %}

{% block title %}
    {{ 'Commentaire Index'|capitalize }}
{% endblock %}

{% block content %}
    <div class="container mt-5">
    <br><br><br><br><br><br>
        <h1 class="display-4">Comment List</h1>
        <div class="my-5"></div>
<a href="{{ path('commentaires_tri_signalements') }}" class="btn btn-success">
            {{ 'sort comments'|trans }}
        </a>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Publicaion_ID</th>
                    <th scope="col">Publicaion_Titre</th>
                    <th scope="col">Contenu</th>
                    <th scope="col">Signals</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for commentaire in commentaires %}
                    <tr>
                        <td>{{ commentaire.id }}</td>
                        <td>{{ commentaire.publication.id }}</td>
                        <td>{{ commentaire.publication.titre }}</td>
                        <td>{{ commentaire.contenu }}</td>
                        <td>{{ commentaire.signalements }}</td>
                        <td>
                            {{ include('commentaire/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">{{ 'Aucun commentaire trouv√©.'|trans }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
