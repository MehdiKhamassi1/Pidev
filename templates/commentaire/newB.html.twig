{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Nouveau Commentaire'|capitalize }}
{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="my-5">
                    <h1>{{ 'Créer un nouveau Commentaire'|capitalize }}</h1>
                </div>

                <div class="card">
                    <div class="card-body">
                        {{ include('commentaire/_form.html.twig') }}
                    </div>
                </div>

                <div class="mt-3">
                    <a href="{{ path('app_commentaire_indexB') }}" class="btn btn-secondary">
                        {{ 'Retour à la liste'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
