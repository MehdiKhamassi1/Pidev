{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Commentaire'|capitalize }}
{% endblock %}

{% block body %}
    <div class="container mt-4">
    <br><br><br><br><br><br><br><br>
        <h1>{{ 'Détails du Commentaire'|capitalize }}</h1>

        <table class="table table-bordered mt-4">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ commentaire.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Contenu</th>
                    <td>{{ commentaire.contenu }}</td>
                </tr>
            </tbody>
        </table>

        <div class="btn-group mt-3">
            <a href="{{ path('app_commentaire_index') }}" class="btn btn-secondary">
                {{ 'Retour à la liste'|trans }}
            </a>
            <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-primary">
                {{ 'Éditer'|trans }}
            </a>
        </div>

        <div class="mt-3">
            <a href="{{ path('commentaire_signalement', {'id': commentaire.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir signaler ce commentaire ?')" class="btn btn-danger">
                {{ 'Signaler'|trans }}
            </a>
        </div>
    </div>
{% endblock %}
