{% extends 'baseback.html.twig' %}

{% block title %}
    Publication Index
{% endblock %}

{% block content %}
    <div class="container mt-5">
    <br><br><br><br><br><br><br>
        <h1 class="display-4 mb-5">Publication List</h1>

        <div class="row">
            {% for publication in publications %}
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="{{ asset('uploads/publication/' ~ publication.image) }}" alt="Publication Image" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">{{ publication.titre }}</h5>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_publication_showB', {'id': publication.id}) }}" class="btn btn-outline-primary">View</a>
                            </div>
                        </div>
                    </div>
                </div>
                
                {% if loop.index % 4 == 0 %}
                    </div><div class="row">
                {% endif %}
                
            {% endfor %}
        </div>

    </div>
  <center>  <a href="{{ path('comment_statisticsB') }}" class="btn btn-success">Statistics</a> </center>
{% endblock %}
