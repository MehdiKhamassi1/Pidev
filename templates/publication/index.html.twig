{% extends 'base.html.twig' %}

{% block title %}
    Publication Index
{% endblock %}

{% block body %}
    <div class="container mt-5">
    <br><br><br><br><br><br><br>
        <h1 class="display-4 mb-5">Publication List</h1>

        <div class="row">
            {% for publication in publications %}
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="{{ asset('uploads/publication/' ~ publication.image) }}" alt="Publication Image" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">{{ publication.titre }}</h5>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_publication_show', {'id': publication.id}) }}" class="btn btn-outline-primary">View</a>
                                {% if app.user.id == publication.user.id %}
                                <a href="{{ path('app_publication_edit', {'id': publication.id}) }}" class="btn btn-outline-primary">Edit</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                
                {% if loop.index % 4 == 0 %}
                    </div><div class="row">
                {% endif %}
                
            {% endfor %}
        </div>

        <div class="mt-4">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('app_publication_new',{'id': app.user.id})}}">Create new</a>
            {% endif %}
        </div>

        <div class="mt-4 text-center">
            <a href="{{ path('pdfP') }}" class="btn btn-primary">Export to PDF</a>
        </div>
    </div>
{% endblock %}
