{% extends 'baseback.html.twig' %}

{% block title %}Local index{% endblock %}

{% block content %}
    <div class="container">
        <h1>Local index</h1>
<br><br><br><br><br><br><br><br><br><br>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th scope="col" style="color: white;">Id</th>
                        <th scope="col" style="color: white;">Nom</th>
                        <th scope="col" style="color: white;">Adresse</th>
                         <th scope="col" style="color: white;">image</th>
                        <th scope="col" style="color: white;">Actions</th>
                        
                      
                    </tr>
                </thead>
                <tbody>
                    {% for local in locals %}
    <tr>
        <td style="color: white;">{{ local.id }}</td>
        <td style="color: white;">{{ local.nom }}</td>
        <td style="color: white;">{{ local.adresse }}</td>
        <td><img src="{{ asset('uploads/local/' ~ local.image) }}" alt="local Image"  style="max-height: 10000px; max-width: 10000px; border-radius: 5px;">                                </td>
        <td>

                                <a class="btn btn-info btn-sm" href="{{ path('app_local_show', {'id': local.id}) }}">Voir</a>
                                <a class="btn btn-primary btn-sm" href="{{ path('app_local_edit', {'id': local.id}) }}">Modifier</a>

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">Aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="buttons">
            <a class="btn btn-success" href="{{ path('app_local_new') }}">Créer un nouveau local</a>
            <center>  <a href="{{ path('local_statistics') }}" class="btn btn-success">Statistics</a> </center>
        </div>
    </div>
{% endblock %}
