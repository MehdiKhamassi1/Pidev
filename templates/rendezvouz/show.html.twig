{% extends 'base.html.twig' %}

{% block title %}Rendezvouz{% endblock %}

{% block body %}
    <div class="container">
        <br><br><br><br><br><br><br><br><br><br><br><br>

        <h1 class="mt-5 mb-4">Rendezvous</h1>

        <div class="card mt-4">
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{ rendezvouz.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date RDV</th>
                            <td>{{ rendezvouz.daterdv|date('d/m/Y H:i') }}</td> {# Formatage de la date selon le format jour/mois/année heure:minute #}
                        </tr>
                        <tr>
                            <th scope="row">Local</th>
                            <td>
                                {% if rendezvouz.local %}
                                    {{ rendezvouz.local.nom }}
                                {% else %}
                                    Aucun local attribué
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a class="btn btn-primary mr-2" href="{{ path('app_rendezvouz_index') }}">Back to List</a>
            <a class="btn btn-success mr-2" href="{{ path('app_rendezvouz_edit', {'id': rendezvouz.id}) }}">Edit</a>
            <a class="btn btn-success" href="{{ path('indewmain', {'id': rendezvouz.id}) }}">calendrier</a>

            {{ include('rendezvouz/_delete_form.html.twig') }}
        </div>
        <div class="mt-4">
            <a class="btn btn-primary" href="{{ path('app_sms') }}">sms</a>
        </div>
    </div>
{% endblock %}