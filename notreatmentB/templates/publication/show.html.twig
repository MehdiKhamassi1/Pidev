{% extends 'base.html.twig' %}

{% block title %}Publication{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h1 class="display-4">Publication</h1>
<br><br><br><br>
        <table class="table mt-5">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ publication.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Contenu</th>
                    <td>{{ publication.contenu }}</td>
                </tr>
                <tr>
                    <th scope="row">Titre</th>
                    <td>{{ publication.titre }}</td>
                </tr>
                
            </tbody>
        </table>

        <div class="mt-4">
            <a href="{{ path('app_publication_index') }}" class="btn btn-primary">Back to List</a>
            <a href="{{ path('app_publication_edit', {'id': publication.id}) }}" class="btn btn-warning">Edit</a>
            {% if publication.publication is empty %}
            {{ include('publication/_delete_form.html.twig') }}
            {% endif %}
        </div>
        <h1>Commentaires:</h1>
     <table class="table">
    <tbody>
        {% for commentaire in publication.Publication %}
            <tr>
                <th>Content</th>
                <td>{{ commentaire.contenu }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
    </div>
{% endblock %}
