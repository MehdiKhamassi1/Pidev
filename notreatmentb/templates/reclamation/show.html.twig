{% extends 'base.html.twig' %}

{% block title %}New Reclamation{% endblock %}
 {% block body %}
 {% endblock %}
{% block content %}
<center>
    <h1>Reclamation</h1>

    <table class="table">
        <tbody>
            
            <tr>
                <th>Sujet</th>
                <td>{{ reclamation.sujet }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ reclamation.contenu }}</td>
            </tr>
            <tr>
                <th>Date de Post</th>
                <td>{{ reclamation.date| date('Y-m-d H:i:s')}}</td>
            </tr>
            <tr>
            {% if reclamation.reponses is empty %}
            {{ include('reclamation/_delete_form.html.twig') }}
            {% endif %}
            </tr>
        </tbody>
    </table>
<br>
    
    
<br><br>
   <h1>Response</h1>
       {% for reponse in reclamation.reponses %}
    <table class="table">
        <tbody>
            
            <tr>
                <th>Reponse</th>
                <td>{{ reponse.response }}</td>
            </tr>
            <tr>
                <th>date Reponse</th>
                <td>{{ reponse.date | date('Y-m-d H:i:s')}}</td>
            </tr>
            <tr>
            {{ include('reponse/_delete_form.html.twig') }}
            </tr>
            </tbody>
    </table>
    {% endfor %}
    <center> <a href="{{ path('app_reclamation_index') }}" class="btn btn-primary">Back to list</a> </center>

    <br>
    {% if reclamation.reponses is empty %}
    <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-primary" style="background-color:#5AAC4E" >Edit</a>
    {% endif %}
    <br><br>
   </center>
{% endblock %}
